@import '~common/fonts/families.styl'
@import '~common/styles/color-palette.styl'
@import '~common/styles/common.styl'

.user-panel
    display flex
    justify-content space-between
    align-items center
    color holy-white
    background url('./header-opacity-js.png') repeat-x
    background-size auto 100%
    padding 0 2vw
    box-sizing border-box
    border-bottom 1px solid super-light-blue

    .logo
        flex-grow 1
        color evil-black

    .user-info
        flex-grow 6
        text-align right
        margin-right 20px
        color evil-black

        .user-info-logo
            font-family AwesomeIcon
            padding-right 5px
            color secondary-action-color

            &.-player:before
                content '\f007'
            &.-game-master:before
                content '\f2be'

    .log-out
        rounded-icon-button()
        text-align right

        &:after
            content '\f08b'
            font-size 80%
