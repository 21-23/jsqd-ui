@import '~common/styles/color-palette.styl'
@import '~common/styles/code-colors.styl'

html
    min-height 100%
    font-size 14px
    background linear-gradient(to top, background-blue-0 0, background-blue-1 35%, background-blue-2 70%, background-blue-3 100%)
    overflow hidden

.game-view
    font-family Helvetica, 'Helvetica Neue', Arial
    height 100vh

    .view-content
        padding 0 2vw
        height 94vh
        display flex
        flex-direction column

    .user-panel
        width 100%
        height 5vh

    .game-progress
        margin-top -.25vh

        .progress-bar
            background main-text

        .round-mark-container
            .-past
                color main-text
                border .15em solid alpha(background-blue-0, .5)
            .-current
                color main-text
            .-future
                color secondary-action-color

    .round-header
        display flex
        justify-content space-between
        align-items center
        margin-bottom 1vh

    .round-name
        color main-text
        font-size 150%
        font-weight bold

    .timer
        .time-text
            color main-text

        .circle-container
            .circle-elapsed
                stroke alpha(background-blue-0, .5)

            .circle-remaining
                stroke main-text

    .game-task, .placeholder.countdown
        flex 1.3

    .placeholder.countdown
        background alpha(theme-background, .75)
        border-radius 3px
        font-size 250px

    .game-input
        flex 1
        margin-top 1vh

