@import '~common/styles/color-palette.styl'

html
    min-height 100%
    font-size 14px
    background linear-gradient(to top, background-blue-0 0, background-blue-1 35%, background-blue-2 70%, background-blue-3 100%)

.game-view
    font-family Helvetica, 'Helvetica Neue', Arial

    .view-content
        padding 0 2vw

    .user-panel
        width 100%
        height 5vh

    .game-progress
        margin-top -.25vh

        .progress-bar
            background main-text

        .round-mark-container
            .-past
                color main-text
                border .15em solid alpha(background-blue-0, .5)
            .-current
                color main-text
            .-future
                color secondary-action-color

    .round-header
        display flex
        justify-content space-between
        align-items center
        margin-bottom 1vh

    .round-name
        color main-text
        font-size 150%
        font-weight bold

    .timer
        .time-text
            color main-text

        .circle-container
            .circle-elapsed
                stroke alpha(background-blue-0, .5)

            .circle-remaining
                stroke main-text

    .game-task
        margin-bottom 1vh
